<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@book.errors.count, "error") %>
      prevented this book from being saved:
    </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :pages %>
  <%= f.number_field :pages %><br>

  <%= f.label :publication_date %>
  <%= f.date_field :publication_date %><br>

  <%= f.label :author_id %>
  <%= f.collection_select :author_id, Author.all, :id, :name, prompt: true %><br>

  <%= f.submit %>
<% end %>