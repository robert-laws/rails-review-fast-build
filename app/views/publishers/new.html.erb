<h1>Create a New Publisher Form</h1>

<% if @publisher.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@publisher.errors.count, "Error") %>
      prevented this publisher from being saved:
    </h2>
    <ul>
      <% @publisher.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @publisher do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :employees %>
  <%= f.number_field :employees %><br><br>

  <div>Office Location:</div>
  <%= f.fields_for :office_locations do |office_location| %>
    <%= office_location.label :city %>
    <%= office_location.text_field :city %><br>
  <% end %>

  <%= f.submit %>
<% end %>